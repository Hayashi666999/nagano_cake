<h1>マイページ</h1>
<p>登録情報</p><%= link_to "編集する",public_customers_information_edit_path,class:"btn btn-success" %>
<table class="table table-bordered">
    <tr>
    <th>氏名</th>
    <td><%= current_customer.last_name %>
    <%= current_customer.first_name %></td>
    </tr>
    <tr>
    <th>カナ</th>
    <td><%= current_customer.last_name_kana %>
    <%= current_customer.first_name_kana %></td>
    </tr>
    <tr>
    <th>郵便番号</th>
    <td><%= current_customer.postal_code %></td>
    </tr>
    <tr>
    <th>住所</th>
    <td><%= current_customer.address %></td>
    </tr>
    <tr>
    <th>電話番号</th>
    <td><%= current_customer.telephone_number %></td>
    </tr>
    <tr>
    <th>メールアドレス</th>
    <td><%= current_customer.email %></td>
    </tr>
</table>
