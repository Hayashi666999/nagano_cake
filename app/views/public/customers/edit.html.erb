<h1>会員情報編集</h1>
<table>
    <%= form_with model:@customer, url: public_customers_information_path do |f| %>
    <tr>
    <th>氏名</th>
      <td>
        <%= f.text_field current_customer.last_name %>
        <%= f.text_field current_customer.first_name %>
      </td>
    </tr>
    <tr>
    <th>カナ</th>
      <td>
        <%= f.text_field current_customer.last_name_kana %>
        <%= f.text_field current_customer.last_name_kana %>
      </td>
    </tr>
    <tr>
    <th>郵便番号</th>
      <td><%= f.text_field current_customer.postal_code %></td>
    </tr>
    <tr>
    <th>住所</th>
      <td><%= f.text_field current_customer.address %></td>
    </tr>
    <tr>
    <th>電話番号</th>
      <td><%= f.text_field current_customer.telephone_number %></td>
    </tr>
    <tr>
    <th>メールアドレス</th>
      <td><%= f.email_field current_customer.email %></td>
    </tr>
    <td><%= f.submit "編集内容を保存",class:"btn btn-success" %></td>
    <% end %>
</table>

<%= link_to "退会する", public_customers_unsubscribe_confirm_path,class:"btn btn-danger" %>