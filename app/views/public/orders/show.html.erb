<h1>注文履歴詳細</h1>

<div class="row justify-content-md-center">
<div class="col-md-9">
<table class="table table-bordered">
 <h2>注文情報</h2>
  <th>注文日</th>
  <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
  <th>配送先</th>
  <td><%= @order.address %></td>
  <th>支払方法</th>
  <td><%= @order.payment_method %></td>
  <th>ステータス</th>
  <td><%= @order.status %></td>


 <h2>請求情報</h2>
  <th>商品合計</th>
  <td><%= @order%></td>
  <th>配送料</th>
  <td><%= @order.postage %></td>
  <th>ご請求額</th>
  <td><%= @order.billing_amount %></td>


 <h2>注文内容</h2>
  <th>商品</th>
   <td><%= @order.item_id %></td>
  <th>単価（税込）</th>
   <td><%= (@order.price*1.1).floor %></td>
  <th>個数</th>
   <td><%= @order.amount %></td>
  <th>小計</th>
   <td><%= @order.billing_amountamount %></td>
</table>
</div>
</div>