<h1>注文履歴一覧</h1>
<div class="row justify-content-md-center">
<div class="col-md-9">
<table class="table table-bordered">
  <th>注文日</th>
  <th>配送先</th>
  <th>注文商品</th>
  <th>支払金額</th>
  <th>ステータス</th>
  <th>注文詳細</th>
  <% @orders.each do |order| %>
  <td><%= order.created_at %></td>
  <td><%= order.address %></td>
  <% order.order_details.each do |order_detail| %>
  <td><%= order_detail.item.name %></td>
  <%end%>
  <td><%= order.billing_amount %></td>
  <td><%= order.status%></td>
  <td><%= link_to "表示する", public_order_path(@orders),class:"btn btn-primary" %></td>
  <%end%>
</table>
</div>
</div>