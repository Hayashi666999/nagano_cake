<h1>配送先登録/一覧</h1>


    <%= form_with model: @address, url: public_addresses_path do |f| %>
  <div class="field">
    <%= f.label :postal_code %><br />
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "郵便番号（ハイフンなし）" %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "住所" %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "宛名" %>
  </div>
  <div class="actions">
    <%= f.submit "新規登録",class:"btn btn-success" %>
  </div>
<% end %>
<table>
  <tr>
  <th>郵便番号</th>
  <% @addresses.each do |address| %>
  <td><%= address.postal_code %></td>
  </tr>
  <tr>
  <th>住所</th>
  <td><%= address.address %></td>
  </tr>
  <tr>
  <th>宛名</th>
  <td><%= address.name %></td>
  </tr>
  <td><%= link_to "編集する", edit_public_address_path(address),class:"btn btn-success" %></td>
  <td><%= link_to "削除する", public_address_path(address), method: :delete, "data-confirm" => "本当に削除しますか？",class:"btn btn-danger" %></td>
  <% end %>
</table>