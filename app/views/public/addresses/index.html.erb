<h1>配送先登録/一覧</h1>


    <%= form_with model: @address, url: public_addresses_path do |f| %>
  <div class="field">
    <%= f.label "郵便番号（ハイフンなし）" %><br />
    <%= f.text_field :postal_code, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label "住所" %><br />
    <%= f.text_field :address, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label "宛名" %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>
  <div class="actions">
    <%= f.submit "新規登録",class:"btn btn-success" %>
  </div>
<% end %>
<div class="row justify-content-md-center">
  <div class="col-md-9">
<table class="table table-bordered">
  <tr>
  <th>郵便番号</th>
  <th>住所</th>
  <th>宛名</th>
  </tr>
  <% @addresses.each do |address| %>
  <tr>
  <td><%= address.postal_code %></td>
  <td><%= address.address %></td>
  <td><%= address.name %></td>
  <td><%= link_to "編集する", edit_public_address_path(address),class:"btn btn-success" %></td>
  <td><%= link_to "削除する", public_address_path(address), method: :delete, "data-confirm" => "本当に削除しますか？",class:"btn btn-danger" %></td>
  </tr>
  <% end %></br>
</table>
</div>
</div>