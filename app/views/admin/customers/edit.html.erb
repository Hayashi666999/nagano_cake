<h1><%= @customer.last_name+@customer.first_name %>
さんの会員情報編集</h1>
<%= form_with model: @customer, url: admin_customer_path do |f| %>
  <%#= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.label :last_name_kana %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    <%= f.label :first_name_kana %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :postal_code %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :telephone_number %>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <%= f.radio_button :payment_method, :is_active %>
  <%= f.label :payment_method, "有効", {value: :is_active} %>
  <%= f.radio_button :payment_method, :is_active %>
  <%= f.label :payment_method, "退会", {value: :is_active} %>
</br>
  <%= f.submit "変更を保存",class:"btn btn-success" %>

<% end %>

<%#= render "public/shared/links" %>