<%= form_with model: @item,url:admin_item_path do |f| %>
<h1>商品編集</h1>
<br>
<th>商品画像</th>
<%= f.file_field :image, accept: "image/*" %>
<br>
<th>商品名</th>
<%= f.text_field :name %>
<br>
<th>商品説明</th>
<%= f.text_area :introduction %>
<br>
<th>ジャンル</th>
<td><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
<br>
<th>税抜価格</th>
<%= f.text_field :price %>円
<br>
  <%= f.radio_button :is_active, :male %>
  <%= f.label :is_active, "販売中", {value: :male, style: "display: inline-block;"} %>
  <%= f.radio_button :is_active, :female %>
  <%= f.label :is_active, "販売停止中", {value: :female, style: "display: inline-block;"} %>
<br>
<td><%= f.submit '変更を保存',class:"btn btn-success" %></td>
<% end %>